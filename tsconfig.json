{
  "compilerOptions": {
    "target": "ES2020",                        // Set ECMAScript target to ES2020
    "module": "commonjs",                      // Use commonjs modules (suitable for Node.js)
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,                   // Allow importing non-ES modules
    "skipLibCheck": true,                      // Skip type checking of declaration files for faster builds
    "forceConsistentCasingInFileNames": true,  // Ensure consistent file casing in imports
    "outDir": "./dist",                        // Output compiled files to ./dist
    "baseUrl": ".",                            // Base directory for resolving non-relative module names
    "typeRoots": ["./node_modules/@types", "./src/types"],  // Include custom types
    "types": ["node", "fastify"],              // Include type definitions for Node.js and Fastify
    "resolveJsonModule": true,                 // Allow importing JSON files
    "allowSyntheticDefaultImports": true,      // Allow default imports from modules without a default export
    "moduleResolution": "node",                // Use Node.js module resolution strategy
    "declaration": true,                       // Generate declaration files (.d.ts)
    "declarationMap": true,                    // Generate source maps for declaration files
    "sourceMap": true,                         // Generate source maps for debugging
    "skipDefaultLibCheck": true                // Skip checking of default library files
  },
  "include": [
    "src/**/*.ts"                             // Include all .ts files under the src directory
  ],
  "exclude": [
    "node_modules",                           // Exclude node_modules directory
    "dist"                                    // Exclude the dist directory (output directory)
  ]
}
